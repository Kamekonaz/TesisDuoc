  <style>
    *{
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }
    body{
        min-height: 100vh;
    }
    .navbar-bg{
        z-index: 5;
        position: fixed;
        width: 100%;    
        background-color: black;
        height: 80px;
        transition-duration: 0.5s;
    }
    .navbar{
        z-index: 6;
        position: fixed;
        width: 100%;    
        height: 80px;
        transition-duration: 0.5s;
    }
    .navbar-logo{
        color: green;
        display: flex;
        width: 80px;
        height: 98%;
    }
    .navbar-scrolled{
        height: 80px;
        opacity: 1.0;
        transition-duration: 0.5s;
    }
  </style>
</head>

<body>

<div id="header-container">
    <nav class="navbar flex justify-between">
        <div class="navbar-logo select-none">
            <div style="margin: auto;">
                Logo
                <!-- <img src="/images/tr_ico.png" style="margin-left:10px;" alt=""> -->
            </div>
        </div>
        <div class="authentication-container flex my-auto mr-5 space-x-2 select-none">
            <div class="login-button">
                <div class="text-center lg:text-left">
                    <a href="/login">
                        <button
                        style="min-width: 120px;"
                            type="button"
                            class="inline-block px-7 py-3 bg-green-600 
                            border-2 border-green-600
                            text-white font-medium text-sm leading-snug uppercase rounded shadow-md hover:bg-green-800 hover:border-green-800 hover:shadow-lg focus:shadow-lg focus:outline-none 
                            focus:ring-0 active:shadow-lg transition duration-150 ease-in-out"
                        >
                            Login
                        </button>
                    </a>
                    </div>
            </div>
            <div class="register-button">
                <div class="text-center lg:text-left">
                    <button
                    style="min-width: 120px;"
                        type="button"
                        class="inline-block px-7 py-3 bg-white text-black border-2 border-green-600 font-medium text-sm 
                        leading-snug uppercase rounded shadow-md hover:bg-green-700 hover:border-green-700 hover:shadow-lg hover:text-white
                        focus:shadow-lg focus:outline-none focus:ring-0 active:shadow-lg transition duration-150 ease-in-out"
                    >
                        Register
                    </button>
                    </div>
            </div>
        </div>
        
    </nav>
    <nav class="navbar-bg">

    </nav>
</div>

<script>
    const header = document.getElementById("header-container")
    if (window.location.href.includes("/login")) header.classList.add("hidden")
</script>


